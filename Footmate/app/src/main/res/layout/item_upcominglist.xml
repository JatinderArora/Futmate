<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/findfriendsbg">
    <TextView
        android:id="@+id/txt_matchdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="left"
        android:textColor="@color/mygametextcolor"
        android:padding="10dp"
        android:singleLine="true"
        android:text=""
        android:textSize="@dimen/textgame" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">
        <ImageView
            android:layout_weight="0.5"
            android:id="@+id/img_logo_exchange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            android:src="@drawable/findgames_freeplay" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:gravity="left"
                android:singleLine="true"
                android:textColor="@color/mygametextcolor"
                android:padding="5dp"
                android:text=""
                android:textSize="@dimen/mediumtext" />
            <TextView
                android:id="@+id/txt_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:gravity="left"
                android:singleLine="true"
                android:textColor="@color/mygametextcolor"
                android:padding="5dp"
                android:text=""
                android:textSize="@dimen/mediumtext" />
            <TextView
                android:id="@+id/txt_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:gravity="left"
                android:singleLine="true"
                android:padding="5dp"
                android:text=""
                android:textSize="@dimen/mediumtext" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_ok_cancel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:layout_gravity="center"
                android:src="@drawable/organizer_check" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>