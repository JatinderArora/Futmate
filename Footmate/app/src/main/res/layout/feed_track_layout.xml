<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--second row of item-->
    <RelativeLayout
        android:id="@+id/layout_track"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/app_color"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/match_height"
            android:background="@drawable/match_name_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/track_matchType"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:singleLine="true"
                android:text="Match #4"
                android:textColor="@color/white"
                android:textSize="@dimen/match_text" />
        </LinearLayout>
        <View
            android:layout_below="@+id/layout1"
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@color/white"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/line">
            <ImageView
                android:id="@+id/img_LogoFutmate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.6"
                android:visibility="gone"
                android:scaleType="fitXY" />
            <LinearLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/field_name_markup"/>
                <TextView
                    android:id="@+id/trackFieldName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Field name"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout3"
                android:layout_below="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!-- l1-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:paddingTop="10dp"
                    android:gravity="center_horizontal"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/track_GoalCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:text="9"/>
                        <TextView
                            android:id="@+id/txtGoal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/white"
                            android:text="Goals"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/track_AssistCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:text="3"/>
                        <TextView
                            android:id="@+id/txt_Assist"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/white"
                            android:text="Assist"/>
                    </LinearLayout>
                </LinearLayout>
                <!--l2-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="10dp"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/match_time_circle">
                    <TextView
                        android:id="@+id/track_Time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:text="00:50:42"/>
                    <LinearLayout
                        android:id="@+id/layout_Circle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="15dp"
                        android:gravity="center"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txt_myteam"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="top"
                            android:textSize="30sp"
                            android:paddingRight="10dp"
                            android:text="2"
                            android:textColor="@color/white"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="5dp"
                                android:layout_gravity="center"
                                android:src="@drawable/match_circle_logo"/>
                            <TextView
                                android:id="@+id/txt_circleBottom"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="5dp"
                                android:layout_gravity="center"
                                android:textSize="20sp"
                                android:textColor="@color/white"
                                android:text="W"/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/txt_opponent"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="top"
                            android:textSize="30sp"
                            android:paddingLeft="10dp"
                            android:text="2"
                            android:textColor="@color/white"/>
                    </LinearLayout>

                </RelativeLayout>
                <TextView
                    android:id="@+id/txt_Description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:lines="2"
                    android:textColor="@color/white"
                    android:text="It was a good game."/>
            </LinearLayout>
            <!-- l3-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:paddingTop="10dp"
                android:gravity="center_horizontal"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/track_DistanceCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:text="9 km"/>
                    <TextView
                        android:id="@+id/txt_Distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/white"
                        android:text="Dist Ran"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/track_AverageCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:text="20 km/h"/>
                    <TextView
                        android:id="@+id/txt_Average"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/white"
                        android:text="Avg Speed"/>
                </LinearLayout>
            </LinearLayout>
            </LinearLayout>
            </RelativeLayout>
    </RelativeLayout>
</LinearLayout>